<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context="mx.com.cesarcorona.proyeccciondegastos.activities.MainWizardActivity">




    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ranem2"
        android:layout_margin="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />


    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:padding="14dp"
        android:keepScreenOn="true"
        android:text="¿Desea recibir la proyección por correo electronico?"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/recibir_email"
            android:inputType="none"
            android:editable="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:hint="Si"
            android:background="@drawable/white_rounded"
            android:layout_width="100dp"
            android:layout_marginRight="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:padding="14dp"
        android:keepScreenOn="true"
        android:text="Nombre completo"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:maxLines="1"
        android:lines="1"
        android:id="@+id/nombre_completo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Nombre completo"
        android:background="@drawable/white_rounded"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content" />

    <TextView
        android:maxLines="1"
        android:lines="1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:padding="14dp"
        android:keepScreenOn="true"
        android:text="Correo electronico"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="center"
        android:hint="Correo electronico"
        android:background="@drawable/white_rounded"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content" />










</LinearLayout>
