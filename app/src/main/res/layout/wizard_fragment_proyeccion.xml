<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context="mx.com.cesarcorona.proyeccciondegastos.activities.MainWizardActivity">

    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        
        <TextView
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:gravity="center|start"
            android:background="@color/colorAccent"
            android:text="ProyecciÃ³n"
            android:textColor="#FFF"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/date_proyeccion"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="#FFF"
            android:gravity="center"
            android:text="11/08/2018"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        
    </LinearLayout>
    

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ranem2"
        android:layout_margin="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="#FFF"
            android:gravity="center"
            android:text="Cifras en pesos"
            android:background="@color/colorAccent"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>


    <ListView
        android:id="@+id/proyeccion_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>









</LinearLayout>
